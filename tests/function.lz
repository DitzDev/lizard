# function with outo type detection
fnc sayHello(string name = "You!") {
   return "Hai ${name}";
}

println(sayHello("Adit"))

# add operation
fnc add(int a, int b ) -> int {
   return a + b 
}

println(add(30, 2000))

# minus operation
fnc minus(int a, int b ) -> int {
   return a - b 
}

println(minus(30, 20))

# times operation
fnc times(int a, int b) -> int {
   return a * b
}

println(times(300, 800))

# Division operation
fnc division(int a, int b ) -> float {
   return a / b
}

println(division(100, 20))

fnc greet(name = "World", age = 0) {
   return "Hello ${name}, you are ${age} years old";
}


println(sayHello());
println(sayHello("Adit"));
println(greet("Alice", 25));